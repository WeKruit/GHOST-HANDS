{
    "name": "ghosthands",
    "version": "0.1.0",
    "private": true,
    "main": "./dist/index.js",
    "types": "./dist/index.d.ts",
    "scripts": {
        "build": "tsc",
        "dev": "tsc --watch",
        "test": "vitest run",
        "test:unit": "vitest run __tests__/unit",
        "test:integration": "vitest run __tests__/integration",
        "test:e2e": "vitest run __tests__/e2e",
        "api": "bun src/api/server.ts",
        "api:dev": "bun --watch src/api/server.ts",
        "worker": "bun src/workers/main.ts",
        "worker:dev": "bun --watch src/workers/main.ts",
        "worker:named": "bun src/workers/main.ts --worker-id=my-name",
        "apply:simple": "bun src/scripts/apply-simple.ts",
        "apply:workday": "bun src/scripts/apply-workday.ts",
        "release-stuck-jobs": "bun src/scripts/release-stuck-jobs.ts",
        "test-shutdown": "bun src/scripts/test-shutdown-cleanup.ts",
        "delete-jobs": "bun src/scripts/delete-all-jobs.ts",
        "submit-test-job": "bun src/scripts/submit-test-job.ts",
        "test-google": "bun src/scripts/submit-test-job.ts",
        "kill-workers": "bun src/scripts/kill-workers.ts",
        "test:worker": "./test-worker.sh"
    },
    "dependencies": {
        "magnitude-core": "^0.3.1",
        "magnitude-extract": "^0.0.2",
        "eventemitter3": "^5.0.1",
        "@supabase/supabase-js": "^2.95.3",
        "hono": "^4.0.0",
        "pg": "^8.13.0",
        "playwright": "npm:patchright@^1.52.0",
        "zod": "^3.24.4"
    },
    "devDependencies": {
        "@hono/node-server": "^1.13.0",
        "@types/bun": "^1.3.9",
        "@types/node": "^22.13.4",
        "@types/pg": "^8.11.0",
        "typescript": "~5.7.2",
        "vitest": "^4.0.18"
    }
}
